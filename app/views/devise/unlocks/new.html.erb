<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Password:</label>
    <div class="col-sm-3  inputGroupContainer">
    <%= f.password_field :password,:class=>"form-control", autocomplete: "off",:placeholder => "Password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div><br>

  <div class="form-group">
    <label class="col-sm-2 control-label">Pass_confirm:</label>
     <div class="col-sm-3  inputGroupContainer">
     <%= f.password_field :password_confirmation,:class=>"form-control", autocomplete: "off",:placeholder => "password Confirmation" %>
  </div><br>

  <div class="form-group">
      <label class="col-sm-1 control-label">Image:</label>
    <div class="col-sm-2  inputGroupContainer">
     <%= f.file_field :image,:onchange => "showimagepreview(this)",:class=>"img_file"  %>
    </div>
  </div>

   <div class="form-group">
    <label class="col-sm-2 control-label">About:</label>
    <div class="col-sm-3  inputGroupContainer">
     <%= f.text_field :about %>
    </div>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Resend unlock instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
